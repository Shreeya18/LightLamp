<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85F5FFDA"
    tools:context=".registerPage">

    <TextView
        android:id="@+id/rlog"
        android:layout_width="294dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:fontFamily="@font/amaranth_italic"
        android:text="   Already Registered? / Login"
        android:textColor="#060904"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.658"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <EditText
        android:id="@+id/rname"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:ems="10"
        android:fontFamily="@font/amaranth_italic"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="5sp"
        android:textColor="#070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <EditText
        android:id="@+id/rcpass"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:ems="10"
        android:fontFamily="@font/amaranth_italic"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="5sp"
        android:textColor="#0B0707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <MultiAutoCompleteTextView
        android:id="@+id/rpro"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:fontFamily="@font/amaranth_italic"
        android:padding="5sp"
        android:textColor="#070505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <EditText
        android:id="@+id/rdob"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:ems="10"
        android:fontFamily="@font/amaranth_italic"
        android:hint="Date of birth"
        android:inputType="date"
        android:padding="5sp"
        android:textColor="#150101"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <EditText
        android:id="@+id/remail"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:ems="10"
        android:fontFamily="@font/amaranth_italic"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5sp"
        android:textColor="#201D1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <EditText
        android:id="@+id/rpass"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:ems="10"
        android:fontFamily="@font/amaranth_italic"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5sp"
        android:textColor="#0C0909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539" />

    <Button
        android:id="@+id/rbtn"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:background="#C8FF00"
        android:fontFamily="@font/amaranth_italic"
        android:padding="5sp"
        android:text="Submit"
        android:textAllCaps="False"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779" />
</androidx.constraintlayout.widget.ConstraintLayout>